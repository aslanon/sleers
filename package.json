{
	"name": "sleer",
	"author": "ONUR ASLAN <aslanon.tr@gmail.com>",
	"version": "1.0.0",
	"description": "MacOS ekran, kamera ve ses kayıt uygulaması",
	"private": true,
	"main": "electron/main.cjs",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"electron:dev": "concurrently -k \"BROWSER=none npm run dev\" \"wait-on tcp:3000 && cross-env NODE_ENV=development electron electron/main.cjs\"",
		"electron:build": "rm -rf dist && nuxt generate && electron-builder --mac"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@nuxtjs/tailwindcss": "^6.10.1",
		"@rollup/rollup-darwin-arm64": "^4.30.1",
		"@vueuse/components": "^12.3.0",
		"@vueuse/core": "^12.3.0",
		"fluent-ffmpeg": "^2.1.3",
		"mousetrap": "^1.6.5",
		"node-addon-api": "^8.3.0",
		"wait-on": "^7.2.0"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^34.0.0",
		"electron-builder": "^25.1.8",
		"nuxt": "^3.9.1"
	},
	"resolutions": {
		"rollup": "4.6.1"
	},
	"build": {
		"appId": "com.sleer.app",
		"productName": "Sleer",
		"asar": true,
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"mac": {
			"category": "public.app-category.video",
			"icon": "build/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"files": [
			".output/public/**/*",
			"electron/**/*"
		],
		"extraMetadata": {
			"main": "electron/main.cjs"
		}
	}
}
