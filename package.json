{
	"name": "sleer",
	"author": "ONUR ASLAN <aslanon.tr@gmail.com>",
	"version": "1.0.0",
	"description": "MacOS ekran, kamera ve ses kayıt uygulaması",
	"private": true,
	"main": "electron/main.cjs",
	"type": "commonjs",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare && npm run prepare:arm64",
		"prepare:arm64": "npm_config_arch=arm64 npm rebuild node-mac-recorder --arch=arm64 && npm_config_arch=arm64 npx electron-rebuild --arch arm64 --force",
		"electron:dev": "arch -arm64 node scripts/start-dev.js",
		"electron:build": "nuxt generate && electron-builder --dir",
		"electron:build:mac": "nuxt generate && electron-builder -m --arm64 --dir",
		"electron:build:quick": "NODE_ENV=production npm run generate && electron-builder --mac --arm64 --dir --config.removePackageScripts=false",
		"electron:build:dmg": "NODE_ENV=production npm run generate && electron-builder --mac --arm64 --config.removePackageScripts=false",
		"electron:build:dmg:signed": "NODE_ENV=production npm run generate && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --arm64 --config.removePackageScripts=false",
		"sign:app": "scripts/sign-app.sh",
		"build:signed": "scripts/build-and-sign.sh",
		"cleanup": "lsof -ti:3002,3003,3004,3005,3006,3007,3008,3009,3010,3011,3012,3013,3014,3015,3016,3017,3018,3019,3020 2>/dev/null | xargs kill -9 2>/dev/null || echo 'No ports to clean up' && echo 'Port cleanup completed'"
	},
	"dependencies": {
		"@aslanonur/liquid-glass-vue": "^1.1.3",
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@nuxtjs/tailwindcss": "^6.10.1",
		"@tensorflow-models/body-pix": "^2.2.1",
		"@tensorflow/tfjs": "^4.22.0",
		"@vueuse/components": "^12.3.0",
		"@vueuse/core": "^12.3.0",
		"electron-store": "^10.0.1",
		"electron-util": "^0.18.1",
		"express": "^4.18.2",
		"fluent-ffmpeg": "^2.1.3",
		"mousetrap": "^1.6.5",
		"node-mac-recorder": "^1.1.0",
		"uiohook-napi": "^1.5.4",
		"wait-on": "^7.2.0"
	},
	"devDependencies": {
		"canvas": "^3.1.0",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^37.0.0",
		"electron-builder": "^26.0.12",
		"nuxt": "^3.9.1"
	},
	"build": {
		"appId": "com.sleer.app",
		"productName": "Sleer",
		"asar": true,
		"asarUnpack": [
			"node_modules/electron-store/**",
			"node_modules/conf/**",
			"node_modules/execa/**",
			"node_modules/uiohook-napi/**",
			"node_modules/get-stream/**",
			"node_modules/human-signals/**",
			"node_modules/is-stream/**",
			"node_modules/merge-stream/**",
			"node_modules/npm-run-path/**",
			"node_modules/onetime/**",
			"node_modules/signal-exit/**",
			"node_modules/strip-final-newline/**"
		],
		"directories": {
			"output": "dist"
		},
		"files": [
			"electron/**",
			"package.json",
			"node_modules/electron-store/**"
		],
		"extraResources": [
			{
				"from": ".output/public",
				"to": "public",
				"filter": [
					"**/*",
					"!mac-arm64/**",
					"!win-unpacked/**",
					"!linux-unpacked/**",
					"!dist/**",
					"!*.app/**",
					"!*.exe",
					"!*.dmg",
					"!*.AppImage",
					"!*.deb",
					"!*.rpm"
				]
			}
		],
		"extraMetadata": {
			"main": "electron/main.cjs"
		},
		"mac": {
			"icon": "build/icon.icns",
			"category": "public.app-category.video",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				}
			],
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"artifactName": "${productName}-${version}-arm64.${ext}",
			"identity": null,
			"type": "distribution",
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"extendInfo": {
				"NSCameraUsageDescription": "Sleer, ekran kayıtlarınıza kamera görüntünüzü eklemek için kameranıza erişim gerektirir.",
				"NSMicrophoneUsageDescription": "Sleer, sesli anlatım kaydetmek için mikrofonunuza erişim gerektirir.",
				"NSScreenCaptureUsageDescription": "Sleer, ekranınızı kaydetmek için bu izne ihtiyaç duyar."
			}
		},
		"nodeGypRebuild": false,
		"npmRebuild": false,
		"forceCodeSigning": false,
		"electronCompile": false
	}
}
